{% extends 'base.html.twig' %}

{% block title %}
	Citations de
	{{ character }}
{% endblock %}

{% block content %}
	<div class="container-fluid my-4">
		<div class="mx-4">
			<h2 class="text-center mb-4">{{ character }}</h2>
			<div class="row row-cols-1 row-cols-md-4 row-cols-lg-6">
				{% for quote in characterQuotes.citation %}
					<div class="col mb-4">
						<div class="card">
							<div class="card-header">
								{{ quote.infos.saison}}
							</div>
							<div class="card-body">
								<blockquote class="blockquote mb-0">
									<p>
										{{ quote.citation }}
									</p>
									<footer class="blockquote-footer">
										<cite title="Source Title">{{ quote.infos.episode }}</cite>
									</footer>
								</blockquote>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
